<img style=" position: fixed;
  right: 0;
  bottom: 0;
  min-width: 100%; 
  min-height: 100%;" src="/images/backcover.jpg">
<div class="row">
			<div class="col col-md-2 "><a href="/dashboard" class="btn btn-success btn-lg btn-block">Home</a></div>
			<div class="col col-md-3 offset-md-6" ><h1 ><span class="badge badge-light" >Welcome <%=user.name%></span> </h1></div>
			<div class="col col-md-1" ><a href="/users/logout" class="btn btn-secondary btn-lg btn-block" style="float:right;" >Logout</a></div>
			
			
			
		</div>
		<div class="row justify-content-md-center pt-5 mb-5">
			<div class="col-12  offset-md-3 col-md-6 mb-4">
				<h1><span class="badge badge-info">Shopkeeper Dashboard</span></h1>
			</div>
			<div class="col-12 col-md-4 mt-5">
				
				<a href="/dashboard/shopkeeper/existingcustomer/<%=user._id%>" class="btn btn-primary btn-lg btn-block" >Search customer</a>
			 </div>
			 <div class="col-12 col-md-4 mt-5">
				<a href="/dashboard/shopkeeper/<%=user._id%>" class="btn btn-primary btn-lg btn-block" >Add new customer</a>
			</div>
		</div>
		<div class="row mt-5 mb-5">
			<div class="col-12 offset-md-2 col-lg-4">
				<h3><span class= "badge badge-warning">Your Total customer</span></h3>
				<h1><span class= "badge badge-success"><%=user.customer.length %></span></h1>
			</div>
			
		</div>
		<div class=" ml-5 row mt-5 mr-5">
				<% for (var i = user.customer.length-1; i >= 0; i--) { %>
				<div class="card col-md-2 text-center" style="width: 18rem;">
  					<i class="fas fa-user fa-7x"></i>
					  <div class="card-body">
					    <p class="card-text"><h3><span class="badge badge-info"><%=i+1%></span>  <span class="badge badge-light"><%= user.customer[i].name%></span></h3></p>

					  </div>
				</div>
				<%}%>
			</div>